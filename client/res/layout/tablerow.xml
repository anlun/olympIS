	<TextView android:text="Sex" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"/>
	<TextView android:text="weight" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"/>
	<TextView android:text="height" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"/>
	<TextView android:text="competition" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"/>

  </TableRow>
